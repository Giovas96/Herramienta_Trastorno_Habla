<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/textView127"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Terminos y Condiciones"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="La aplicación esta dirigida principalmente a terapeutas que trabajan con transtornos del habla, pero algunas de sus funciones pueden ser utilizadas para otras especialidades.\n\nPor la función de agenda que tiene puede registrar pacientes, citas y hacer uso del historial médico que contiene la aplicación. \n\nDebe registrarse primero para poder hacer uso de la aplicación, una vez registrado por cuestiones de seguridad debe acceder con el correo y contraseña proporcionados."/>



</androidx.appcompat.widget.LinearLayoutCompat>