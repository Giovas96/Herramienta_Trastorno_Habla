<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cita_cv"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">
            <ImageView
                android:id="@+id/Imageevaluacion"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                app:srcCompat="@drawable/evaluacion"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/Imageevaluacion"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/Imageevaluacion">
                <TextView
                    android:id="@+id/fonema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Fonema"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/inicial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Inicial"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/directa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Directa"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/inversa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inversa"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/intervocalica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intervocalica"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/trabada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="trabada"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/finals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Final"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/grupor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grupo r"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/grupol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grupo l"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/grupos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="grupo s"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/observacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="observacion"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/adquirido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de adquirido"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>