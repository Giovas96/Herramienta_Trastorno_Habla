<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_list_eval"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_arrow_circle_left_24" />

        <TextView
            android:id="@+id/title_list_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add_eval"
            android:layout_marginEnd="167dp"
            android:text="Paciente"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add_eval"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_add_circle_24" />

        <Spinner
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/ic_baseline_add_circle_24"/>

    </RelativeLayout>

</RelativeLayout>